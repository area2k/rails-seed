# frozen_string_literal: true

module Inputs
  class <%= class_name %>FilterSetInput < BaseFilterSetInput
    description 'Available filter operations for a <%= class_name %>'

    <%- filters.each do |name, filter| -%>
    argument :<%= filter.fetch(:input_as, name) %>, <%= filter[:input_type] %>, required: false<%= ", as: :#{name}" if filter[:input_as] %>
    <%- end -%>
  end
end
